
    <section class="seasons-show-<%= @season.name %>">

        <div class="seasons-show-header">
          <h1><%= @season.name %></h1>
          <p>Sautee' Seattle is dedicated to bringing you up to date information on seasonal vegetable, fruit and more! We think that eating healthy and that information on seasonal produce should be easily available to everyone, all the time!</p>
          <h2>Whats on the Menu?</h2>
        </div>

        <div class="schmear-image">
          <%= image_tag "border-schmear.svg" %>
        </div>

        <div>
            <ul class="season-ingredient-partial-grid">
              <% @season.ingredients.each do |ingredient| %>
                <%= render partial: "season_ingredient", locals: {ingredient: ingredient} %>
              <% end %>
            </ul>
        </div>

    </section>
