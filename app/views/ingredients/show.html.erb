<section id="ingredient-show">
  <article class="top">
    <aside class="left-content">
      <img src="http://via.placeholder.com/250x250" alt="">
    </aside>

    <aside class="right-content locations">
      <h3>Locations</h3>
      <ul>
        <% @ingredient.locations.each do |location| %>
          <li><%= location.title %></li>
        <% end %>
      </ul>
      <span class="see-more">
        <%= link_to "See More", "#" %>
      </span>
    </aside>
  </article>

  <article class="bottom">
    <aside class="left-content produce-info">
      <h2><%= @ingredient.name %></h2>
      <h6>Best Seasons -> <%= @seasons_string %></h6>
      <p><%= @ingredient.description %></p>
    </aside>

    <aside class="right-content recipes">
      <h3>Recipes</h3>
      <ul>
        <% @ingredient.recipes.each do |recipe| %>
          <li>
            <h5><%= recipe.title %></h5>
            <p><%= recipe.body[0..20] %>...</p>
          </li>
        <% end %>
      </ul>
      <span class="see-more">
        <%= link_to "See More", "#" %>
      </span>
    </aside>
  </article>
</section>
