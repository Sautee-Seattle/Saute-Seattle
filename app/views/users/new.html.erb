<section id="users-new">
  <article id="new-user-form">
    <h1>Create an Account!</h1>

    <%= form_for @user, html: { class: 'form' } do |f| %>
    <%= render "shared/errors", object: @recipe %>
    
      <div class="label">
        <label>Name</label>
      </div>
      <div>
        <%= f.text_field :username, required: true, autofocus: true %>
      </div>
      <div class="label">
        <label>Email</label>
      </div>
      <div>
        <%= f.email_field :email, required: true %>
      </div>
      <div class="label">
        <label>Password</label>
      </div>
      <div>
        <%= f.password_field :password, required: true %>
      </div>
      <div class="label">
        <label>Bio</label>
      </div>
      <div>
        <%= f.text_area :bio %>
      </div>
      <div>
        <%= f.submit 'Register' %>
      </div>
    <% end %>
  </article>
</section>
