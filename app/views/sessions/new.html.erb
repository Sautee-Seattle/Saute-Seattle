<section id="login-form">
  <h1>login</h1>
  <aside>
    <%= form_tag '/login' do %>
    <%= render "shared/errors", object: @user %>

      <div class="label">
        <label>
          <h3>Username</h3>
        </label>
      </div>
      <div>
        <%= text_field_tag :username, nil, required: true, autofocus: true %>
      </div>
      <div class="label">
        <label>
          <h3>Password</h3>
        </label>
      </div>
      <div>
        <%= password_field_tag :password, nil, required: true %>
      </div>
      <div>
        <%= submit_tag "Login" %>
      </div>
    <% end %>
  </aside>
</section>
