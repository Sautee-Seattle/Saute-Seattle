<section id="location-new">
  <article class="left-content">
    <%= form_for :post do |f| %>
      <%= f.hidden_field :post_type, value: 'location' %>
      <div>
        <label>Location Name:</label>
        <%= f.text_field :title %>
      </div>
      <div>
        <label>Address:</label>
        <%= f.text_field :body %>
      </div>
      <div>
        <%= f.submit "Submit" %>
      </div>
    <% end %>
  </article>
</section>
