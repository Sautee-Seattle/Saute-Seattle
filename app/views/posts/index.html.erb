<section id="recipes-posts-index">
  <h2><%= @ingredient.name %></h2>
  <p>
    <%= @description %>
  </p>
  <aside class="recipe-list">
    <h3>Ch ch check it out!</h3>
    <div class="separator"></div>
      <ul>
        <% @ingredient.recipes.each do |recipe| %>
          <li>
            <%= link_to recipe.title, user_recipe_path(recipe.user, recipe) %>
          </li>
        <% end %>
      </ul>
  </aside>
</section>
